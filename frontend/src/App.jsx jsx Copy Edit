import React, { Suspense, lazy, useState } from 'react';

const AppointmentHistory = lazy(() => import('./components/AppointmentHistory'));
const BookAppointment = lazy(() => import('./components/BookAppointment'));

export default function App() {
  // simple tab state to switch between book and history
  const [view, setView] = useState('book');

  return (
    <div className="min-h-screen bg-gray-50 p-4">
      <header className="mb-4">
        <nav className="flex gap-4">
          <button
            className={`px-4 py-2 rounded ${
              view === 'book' ? 'bg-blue-600 text-white' : 'bg-white border'
            }`}
            onClick={() => setView('book')}
          >
            Book Appointment
          </button>
          <button
            className={`px-4 py-2 rounded ${
              view === 'history' ? 'bg-blue-600 text-white' : 'bg-white border'
            }`}
            onClick={() => setView('history')}
          >
            Appointment History
          </button>
        </nav>
      </header>

      <main>
        <Suspense fallback={<div>Loading...</div>}>
          {view === 'book' ? <BookAppointment /> : <AppointmentHistory />}
        </Suspense>
      </main>
    </div>
  );
}
